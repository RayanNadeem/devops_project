pipeline {
    agent any

    environment {
        GIT_REPO = 'https://github.com/RayanNadeem/devops_project.git'
        BRANCH = 'main' // Replace with your actual branch name
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    echo "Checking out repository from ${GIT_REPO}..."
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: "*/${BRANCH}"]],
                        extensions: [],
                        userRemoteConfigs: [[url: "${GIT_REPO}"]]
                    ])
                }
            }
        }

        stage('Build') {
            steps {
                echo "Building the project..."
                // Replace the following with your actual build command, e.g., `mvn clean install`
                sh 'echo Build step executed'
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
                // Replace with your test commands, e.g., `mvn test` or `npm test`
                sh 'echo Test step executed'
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying the application..."
                // Add your deployment commands here
                sh 'echo Deploy step executed'
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully."
        }
        failure {
            echo "Pipeline failed. Check logs for details."
        }
    }
}
