pipeline {
    agent any

    environment {
        GIT_REPO = 'https://github.com/RayanNadeem/devops_project.git'
        BRANCH = 'main' // Change this to your repository branch name, e.g., 'main' or 'master'
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Checking out repository..."
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: "*/${BRANCH}"]],
                    doGenerateSubmoduleConfigurations: false,
                    extensions: [
                        [$class: 'CloneOption', noTags: false, shallow: true, depth: 1, timeout: 20]
                    ],
                    userRemoteConfigs: [[url: "${GIT_REPO}"]]
                ])
            }
        }

        stage('Build') {
            steps {
                echo "Building the project..."
                // Add your build commands here, e.g., `mvn clean install` for Maven projects.
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
                // Add your test commands here.
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying the application..."
                // Add your deployment commands here.
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully."
        }
        failure {
            echo "Pipeline failed. Check logs for details."
        }
    }
}
