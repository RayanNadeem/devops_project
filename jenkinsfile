pipeline {
    agent any

    environment {
        GIT_REPO = 'https://github.com/RayanNadeem/devops_project.git'
        BRANCH = 'main'
        DOCKER_REGISTRY = 'docker.io' 
        FRONTEND_IMAGE = 'docker.io/fqabdullah/front-end:latest'
        BACKEND_IMAGE = 'docker.io/fqabdullah/backend:latest'
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    echo "Checking out repository from ${GIT_REPO}..."
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: "*/${BRANCH}"]],
                        extensions: [],
                        userRemoteConfigs: [[url: "${GIT_REPO}"]]
                    ])
                }
            }
        }

        stage('Build Front-End') {
            steps {
                script {
                    echo "Building Docker image..."
                    dir('front-end'){
                        bat '''
                            docker build -t  front-end:latest  .
                        '''
                    }
                }
            }
        }

        stage('Build Back-End') {
            steps {
                script {
                    echo "Building Docker image..."
                    dir('backend'){
                        bat '''
                            docker build -t  backend:latest  .
                        '''
                    }
                }
            }
        }

        stage('Push Docker Images') {
            steps {
                script {
                    echo "Pushing Docker images to Docker Hub..."
                    bat """
                        docker login -u fqabdullah -p Motu#1234 --password-stdin
                        docker push ${FRONTEND_IMAGE}
                        docker push ${BACKEND_IMAGE}
                    """
                }
            }
        }


        stage('Deploy') {
            steps {
                echo "Deploying the application..."
                // Add deployment commands here
                bat 'echo Deploy step executed'
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully."
        }
        failure {
            echo "Pipeline failed. Check logs for details."
        }
    }
}
